<div class="container">
  <h1><%= @task.title %></h1>
  <%= link_to "Edit task", edit_task_path %>
  <%= link_to "Delete task", task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete this task?"} %>
  <div class="instruction">
    <p><%= @task.details %></p>
  </div>
    <div>
      <%= render "completed", task: @task %>Completion
    </div>
  <%= link_to "Back to list", tasks_path %>
</div>
